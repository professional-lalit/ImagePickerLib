<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_size_10">

    <ImageView
        android:id="@+id/img_file"
        android:layout_width="@dimen/dimen_size_50"
        android:layout_height="@dimen/dimen_size_50"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_folder" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:layout_toStartOf="@+id/img_tick"
        android:layout_toEndOf="@+id/img_file"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_file_name"
            style="@style/TextStyleBlack1"
            android:ellipsize="end"
            android:lines="1"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />

        <TextView
            android:id="@+id/txt_file_desc"
            style="@style/TextStyleBlack2"
            android:ellipsize="end"
            android:lines="1"
            android:text="XXXXXXX" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_tick"
        android:layout_width="@dimen/dimen_size_20"
        android:layout_height="@dimen/dimen_size_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_correct"
        android:visibility="invisible" />

</RelativeLayout>